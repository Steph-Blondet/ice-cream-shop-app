<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Register</title>
        <!-- css stylesheet link -->
        <link rel="stylesheet" type="text/css" href="/style.css">
        <!-- google fonts link -->
        <link href="https://fonts.googleapis.com/css?family=Muli:400,800|Pacifico" rel="stylesheet">
        <!-- viewport -->
        <meta name="viewport" content="width=device-width,initial-scale=1">
    </head>
    <body class="register-page">
        <header>
            <div class="full-navbar">
                <div class="half-navbar-left">
                    <%- include ../partials/navbar.ejs %>
                </div>
            </div>
        </header>

        <main>
            <h1 class="register-tittle">Register</h1>

            <div class="form-container">
                <form class="register-form" action="/users" method="POST">
                    <input type="text" name="username" value="Username"/><br/>
                    <input type="password" name="password" value="Password"/><br/>
                    <input class="createuser-button" type="submit" value="Create User"/>
                </form>
            </div>


        </main>

        <!-- including ejs template for footer -->
        <%- include ../partials/footer.ejs %>

    </body>
</html>
