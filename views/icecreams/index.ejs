<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Ice Creams</title>
    </head>
    <body>

        <header>
            <h1>Ice Creams by EScream</h1>
            <%- include ../partials/navbar.ejs %>
        </header>

        <main>
            <section>
                <h1>Flavors</h1>
                <ul>
                    <li>Vanilla</li>
                    <li>Chocolate</li>
                    <li>Strawberry</li>
                    <li>Cookies and Cream</li>
                    <li>Salted Caramel</li>
                    <li>Chocolate Chip</li>
                </ul>
            </section>

            <section>
                <h1>Creations</h1>
                <p><a href="../icecreams/new">Add Ice Cream</a></p>
                    <ul>
                        <% for(var i=0; i <icecreams.length; i++){ %>
        				    <li><a href="/icecreams/<%=icecreams[i]._id%>"><%=icecreams[i].nameOfCreation%></a></li>
        			    <% } %>
                    </ul>
            </section>


        </main>

        <!-- including ejs template for footer -->
        <%- include ../partials/footer.ejs %>
    </body>
</html>
