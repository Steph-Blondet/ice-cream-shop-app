<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Login</title>
        <!-- css stylesheet link -->
        <link rel="stylesheet" type="text/css" href="style.css">
        <!-- google fonts link -->
        <link href="https://fonts.googleapis.com/css?family=Muli:400,800|Pacifico" rel="stylesheet">
        <!-- viewport -->
        <meta name="viewport" content="width=device-width,initial-scale=1">
    </head>
    <body>
        <header>

            <h2><a href="/sessions/new">Log In</a></h2>
            <h2><a href="/users/new">Register</a></h2>

            <div class="full-navbar">
                <div class="half-navbar-left">
                    <%- include ../partials/navbar.ejs %>
                </div>
            </div>
        </header>

        <main>
            <section>
                <h1>Log In</h1>
                <form action="/sessions" method="POST">
                    <input type="text" name="username" placeholder="username"/><br/>
                    <input type="password" name="password"/><br/>
                    <input type="submit" value="Log In"/>
                </form>
            </section>
        </main>

        <footer>
            <!-- including ejs template for footer -->
            <%- include ../partials/footer.ejs %>
        </footer>


    </body>
</html>
