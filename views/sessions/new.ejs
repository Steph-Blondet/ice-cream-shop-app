<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Login</title>
        <!-- css stylesheet link -->
        <link rel="stylesheet" type="text/css" href="/style.css">
        <!-- google fonts link -->
        <link href="https://fonts.googleapis.com/css?family=Muli:400,800|Pacifico" rel="stylesheet">
        <!-- viewport -->
        <meta name="viewport" content="width=device-width,initial-scale=1">
    </head>
    <body class="login-page">
        <header>

            <div class="full-navbar">
                <div class="half-navbar-left">
                    <%- include ../partials/navbar.ejs %>
                </div>
            </div>
        </header>

        <main>
            <section>
                <h1 class="tittle">Log In</h1>

                <div class="form-container" id="log">
                    <form action="/sessions" method="POST">
                        <input type="text" name="username" placeholder="Username"/><br/>
                        <input type="password" name="password" placeholder="Password" /><br/>
                        <input class="button" id="log-button" type="submit" value="Log In"/>
                    </form>
                </div>

            </section>
        </main>
    </body>
</html>
